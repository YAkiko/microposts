<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%= link_to "フォロー", followings_user_path(@user) %> <%= link_to @user.following_users.count, followings_user_path, class:"badge" %>
    <%= link_to "フォロワー", followers_user_path(@user) %> <%= link_to @user.follower_users.count, followers_user_path, class:"badge" %>
  </aside>
  <div class="col-md-8">
    <h3>フォロー (<%= @following_users.count %>)</h3>
      <% if @user.following_users.any? %>
        <ol class="user">
          <%= render @following_users %>
        </ol>
      <% end %>
  </div>
</div>